MACHINES = {
  :inetRouter => {
        :box_name => "centos/7",
        :vm_name => "inetRouter",
        #:public => {:ip => '10.10.10.1', :adapter => 1},
        :net => [
                 #  {ip: '192.168.255.1', adapter: 2, netmask: "255.255.255.0", virtualbox__intnet: "router-net"},
                   {ip: '192.168.50.10', adapter: 8},
                ]
  },
  :inetRouter2 => {
        :box_name => "centos/7",
        :vm_name => "inetRouter2",
        :net => [
                   {ip: '192.168.255.2', adapter: 2, netmask: "255.255.255.0", virtualbox__intnet: "centralNet"},
                 #  {ip: '192.168.255.9', adapter: 3, netmask: "255.255.255.0", virtualbox__intnet: "router-net2"},
                   {ip: '192.168.50.11', adapter: 8},
                ]  
  },
  :centralRouter => {
        :box_name => "centos/7",
        :vm_name => "centralRouter",
        :net => [
              #     {ip: '192.168.255.3', adapter: 2, netmask: "255.255.255.0", virtualbox__intnet: "router-net"},
                   {ip: '192.168.255.3', adapter: 3, netmask: "255.255.255.0", virtualbox__intnet: "centralNet"},
                   {ip: '192.168.50.12', adapter: 8},
                ]
  },
  :centralServer => {
        :box_name => "centos/7",
        :vm_name => "centralServer",
        :net => [
                 #  {ip: '192.168.0.2', adapter: 2, netmask: "255.255.255.0", virtualbox__intnet: "centralNet"},
                   {ip: '192.168.255.10', adapter: 3, netmask: "255.255.255.0", virtualbox__intnet: "centralNet"},
                   {ip: '192.168.50.13', adapter: 8},
                ]
  },
  
  

}



Vagrant.configure("2") do |config|

  MACHINES.each do |boxname, boxconfig|

    config.vm.define boxname do |box|

        box.vm.box = boxconfig[:box_name]
        box.vm.host_name = boxname.to_s
 	box.vm.memory = 512
	box.vm.cpus= 1
        boxconfig[:net].each do |ipconf|
          box.vm.network "private_network", ipconf
        end

        if boxconfig.key?(:public)
          box.vm.network "public_network", boxconfig[:public]
        end


               box.vm.provision "ansible" do |ansible|
                        ansible.playbook =  "provision.yml"
                       ansible.inventory_path = "hosts"
                end
       end
  end
end

